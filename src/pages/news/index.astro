---
import BaseLayout from "../../layouts/BaseLayout.astro";
import NewsList from "../../components/NewsList.jsx";
import { createNewsBuilder } from "../../data/db";

const { data } = await createNewsBuilder()
  .order("created_at", {
    ascending: false,
  })
  .limit(12);

const title = "Koala 聊开源 - 陪伴你成长的技术频道";
---

<BaseLayout title={title}>
  <NewsList initData={data} grid="news" client:load />
</BaseLayout>
